<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
        xmlns:Interactivity="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Extension"
        xmlns:controls="clr-namespace:System.Windows.Controls;assembly=System.Windows.Extension"
        x:Class="TextBoxApplication.MainWindow"
        mc:Ignorable="d"
        Title="MainWindow"
        Height="350"
        Width="525">
    <Grid>
        <TextBox>
            <i:Interaction.Behaviors>
                <Interactivity:TextBoxInputFilterBehavior>
	                <Interactivity:TextBoxInputFilterBehavior.InputFilter>
                        <controls:DecimalTextBoxInputFilter/>
                    </Interactivity:TextBoxInputFilterBehavior.InputFilter>
                </Interactivity:TextBoxInputFilterBehavior>
            </i:Interaction.Behaviors>
        </TextBox>
    </Grid>
</Window>
